{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe сборка активного файла",
			"command": "D:\\Compilers\\mingw\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "компилятор: D:\\Compilers\\mingw\\bin\\g++.exe"
		},
		{
			"type": "process",
			"label": "Run",
			"command" : "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"detail": "Run ${fileDirname}\\${fileBasenameNoExtension}.exe"
		}
	]
}